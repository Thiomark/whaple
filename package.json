{
  "name": "whaple",
  "version": "1.0.0",
  "description": "Standalone WhatsApp messaging SDK with direct Baileys integration, Firebase queue system, and smart routing. Zero Baileys exposure to your app.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "index.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:ts": "jest --testMatch='**/*.test.ts'",
    "clean": "rm -rf dist",
    "package": "npm run build && npm pack",
    "prepublishOnly": "npm run build && node security-audit.js",
    "prepack": "npm run build",
    "audit": "node security-audit.js",
    "dev": "tsc --watch"
  },
  "keywords": [
    "whatsapp",
    "messaging",
    "baileys",
    "firebase",
    "queue",
    "smart-routing",
    "typescript",
    "sdk",
    "api",
    "edge-functions",
    "vercel",
    "nextjs",
    "standalone"
  ],
  "author": "Whaple Team <thiotsoela@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.18",
    "firebase-admin": "^13.4.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "@types/qrcode-terminal": "^0.12.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thiomark/whaple.git"
  },
  "homepage": "https://whaple.vercel.app",
  "bugs": {
    "url": "https://github.com/thiomark/whaple/issues"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    ".env.example"
  ]
}
